<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/h_dim_45"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llBackHeader"
            android:layout_width="@dimen/h_dim_52"
            android:layout_height="match_parent"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgBackHeaderArrow"
                android:layout_width="@dimen/dim_36"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:foregroundTint="@color/white"
                android:src="@mipmap/back" />
        </LinearLayout>

        <View
            android:id="@+id/LeftHederSpaceLeftSide"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlHeaderLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/h_dim_3">


            <ImageView
                android:id="@+id/imgToolbarNameLeft"
                android:layout_width="@dimen/dim_36"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/headerlogo" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlHeaderNamecenter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txtHeaderNamecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/h_text_dim_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlNotificationHeader"
            android:layout_width="@dimen/h_dim_52"
            android:layout_height="@dimen/h_dim_52"
            android:layout_alignParentRight="true"
            android:background="?attr/actionBarItemBackground"
            android:padding="@dimen/h_dim_3"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgHeaderNotification"
                android:layout_width="@dimen/h_dim_20"
                android:layout_height="@dimen/h_dim_20"
                android:layout_centerInParent="true"
                android:src="@mipmap/notification" />

            <TextView
                android:id="@+id/txtNotiCount"
                android:layout_width="@dimen/h_dim_18"
                android:layout_height="@dimen/h_dim_18"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circle_blue_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/h_text_dim_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUserHeader"
            android:layout_width="@dimen/h_dim_45"
            android:layout_height="@dimen/h_dim_52"
            android:layout_alignParentRight="true"
            android:background="?attr/actionBarItemBackground"
            android:padding="@dimen/h_dim_3">

            <ImageView
                android:id="@+id/imgUserLogout"
                android:layout_width="@dimen/h_dim_20"
                android:layout_height="@dimen/h_dim_20"
                android:layout_centerInParent="true"
                android:src="@mipmap/user"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLogoutHeader"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_dim_52"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/h_dim_12"
            android:background="?attr/actionBarItemBackground"
            android:padding="@dimen/h_dim_3">

            <ImageView
                android:id="@+id/imgHeaderLogout"
                android:layout_width="@dimen/h_dim_20"
                android:layout_height="@dimen/h_dim_20"
                android:layout_centerInParent="true"
                android:src="@mipmap/logout" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
