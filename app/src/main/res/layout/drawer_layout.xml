<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:paddingLeft="@dimen/dim_12"
    android:paddingTop="@dimen/dim_12">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llDashBoardDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDashboardMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16"

                >

                <TextView
                    style="@style/text_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg"
                    android:paddingRight="@dimen/dim_36"
                    android:text="@string/dashboard"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llProfileMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView

                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"
                    android:text="@string/profile"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyParcelsMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView
                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"

                    android:text="@string/my_parcels"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyTripMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView
                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"

                    android:text="@string/my_trips"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyRecivingMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView
                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"

                    android:text="@string/my_receivings"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWalletMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView
                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"

                    android:text="@string/wallet"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWithDrawMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="@dimen/dim_12">

                <TextView
                    style="@style/text_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                    android:paddingBottom="@dimen/dim_6"

                    android:text="@string/withdraw"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoginMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16">

            <TextView
                style="@style/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bottom_line_blue_bg"
                android:text="@string/login"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16">

            <TextView
                style="@style/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bottom_line_blue_bg"
                android:text="@string/general"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSettingsMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dim_8"
            android:paddingTop="@dimen/dim_12">

            <TextView
                style="@style/text_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                android:paddingBottom="@dimen/dim_6"

                android:text="@string/settings"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTandCMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dim_8"
            android:paddingTop="@dimen/dim_12">

            <TextView
                style="@style/text_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                android:paddingBottom="@dimen/dim_6"
                android:text="@string/terms_conditions"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPrivacyPolicyMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dim_8"
            android:paddingTop="@dimen/dim_12">

            <TextView
                style="@style/text_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bottom_line_blue_bg_point_5dp"
                android:paddingBottom="@dimen/dim_6"
                android:text="@string/privacy_policy"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
