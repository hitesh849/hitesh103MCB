<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    android:padding="@dimen/dim_16"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_bg"
            android:orientation="vertical"
            android:padding="@dimen/dim_16"

            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16"

                android:textColorHint="@color/dark_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:hint="@string/username"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16"

                android:textColorHint="@color/dark_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:hint="@string/password"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_extra_large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_6"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_pink"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_12"
                    android:paddingTop="@dimen/dim_12"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    style="@style/text_extra_large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_6"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_blue"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_12"
                    android:paddingTop="@dimen/dim_12"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                style="@style/text_semi_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_16"
                android:gravity="center"
                android:text="@string/forgot_password" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
