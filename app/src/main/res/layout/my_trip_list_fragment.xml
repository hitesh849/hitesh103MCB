<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="vertical">

    <include layout="@layout/existing_parcel_search_filter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/dim_5"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue"
            android:gravity="center"
            android:paddingBottom="@dimen/dim_5"
            android:paddingTop="@dimen/dim_5"
            android:text="Cancel Trip"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue"
            android:gravity="center"
            android:paddingBottom="@dimen/dim_5"
            android:paddingTop="@dimen/dim_5"
            android:text="Edit Trip"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpMyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/llFooter"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/llCountDotsMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dim_6"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>
