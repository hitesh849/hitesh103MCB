<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/dim_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtReceiverNameParcelDetails"
                    style="@style/text_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hitesh Kumawat" />

                <TextView
                    android:id="@+id/txtReceiverEmailParcelDetails"
                    style="@style/text_semi_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_3"
                    android:background="@drawable/rectangle_bottom_line_white_bg"
                    android:text="hitesh.kumawat@byteclues.com" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtReceiverMobileParcelDetails"
                    style="@style/text_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10"
                    android:text="" />

                <TextView
                    android:id="@+id/txtReceiverIdParcelDetails"
                    style="@style/text_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_3"
                    android:background="@drawable/rectangle_bottom_line_white_bg"
                    android:text="MCB110002" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
