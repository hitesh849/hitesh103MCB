<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble1"
        android:minWidth="@dimen/dim_96"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLeftMsgChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dim_6"
            android:maxEms="12"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/txtDateTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_8"
            android:layout_marginRight="@dimen/dim_8"
            android:gravity="right"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/text_dim_8" />

    </LinearLayout>
</LinearLayout>
