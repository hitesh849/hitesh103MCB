<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_16">

    <TextView
        android:id="@+id/txtParcelId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:gravity="center"
        android:textSize="@dimen/text_dim_18"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/from"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />

            <TextView
                android:id="@+id/fromDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/from"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dim_8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />

            <TextView
                android:id="@+id/txtToDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dim_8">

            <TextView
                android:id="@+id/toDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />

            <TextView
                android:id="@+id/toWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dim_16" />
        </TableRow>


        <TableRow>

        </TableRow>
    </TableLayout>

</LinearLayout>
