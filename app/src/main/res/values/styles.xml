<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColorHint">@color/dark_grey</item>

    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:divider">@null</item>

    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_extra_small">
        <item name="android:textSize">@dimen/text_dim_8</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_small">
        <item name="android:textSize">@dimen/text_dim_10</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text_semi_medium">
        <item name="android:textSize">@dimen/text_dim_12</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text_medium">
        <item name="android:textSize">@dimen/text_dim_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">@dimen/text_dim_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_extra_large">
        <item name="android:textSize">@dimen/text_dim_22</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_blue" parent="text_large">
        <item name="android:textSize">@dimen/text_dim_22</item>
        <item name="android:background">@drawable/rounded_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dim_8</item>
        <item name="android:paddingBottom">@dimen/dim_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_pink" parent="text_large">
        <item name="android:textSize">@dimen/text_dim_22</item>
        <item name="android:background">@drawable/rounded_pink</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dim_8</item>
        <item name="android:paddingBottom">@dimen/dim_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editxt_small" parent="text_small">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="et_withdraw">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="et_signup">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="et_login">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


<!--
    <style name="text_double_extra_large">
        <item name="android:textSize">@dimen/text_dim_26</item>
        <item name="android:textColor">@color/black</item>
    </style>-->


</resources>
